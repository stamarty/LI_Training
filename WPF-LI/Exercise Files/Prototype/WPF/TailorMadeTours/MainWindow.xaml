<Window x:Class="TailorMadeTours.MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:local="clr-namespace:TailorMadeTours"
				mc:Ignorable="d"
				xmlns:views='clr-namespace:TailorMadeTours.UserControls'
				Title="MainWindow"
				Height="700"
				Width="800"  WindowStartupLocation='CenterScreen'>
	<StackPanel>
		<TextBlock Text='Tailor-made Tours - Chicago'
							 FontSize="28"
							 FontWeight="Bold" />
		<TabControl MaxHeight='700'>
			<TabItem Header='Tour Stops'>
				<views:TourStopsView />
			</TabItem>
			<TabItem Header='Details'>
				<views:DetailView />
			</TabItem>
			<TabItem Header='Weekly Calendar'>
				<views:ScheduleView />
			</TabItem>

		</TabControl>

	</StackPanel>
</Window>
